<launch>

   <node name="robotino_node_main" pkg="cnbiros_robotino" type="robotino_node_main" output="screen" >
      <param name="hostname" value="192.168.1.3" />
      <param name="topicname" value="/robotino_velocity" />
      <param name="frequency" value="10" />
   </node>
   <node name="robotino_node_infrared" pkg="cnbiros_robotino" type="robotino_node_infrared" output="screen" >
      <param name="topicname" value="/robotino_infrared" />
      <param name="frequency" value="10" />
      <param name="decay" value="1" />
   </node>
   
   <!-- Launch RViz with the demo configuration -->
   <node name="rviz" pkg="rviz" type="rviz" args="-d $(find cnbiros_robotino)/rviz/grid_map.rviz" />
</launch>
